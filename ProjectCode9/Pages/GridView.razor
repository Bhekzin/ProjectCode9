<!-- #region C#Code-->
@page "/grid"

@using ProjectCode9.Models;
@using ProjectCode9.Services;
@inject IProductService _productService;


@code{
    private IEnumerable<Product> Data = null;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        Data = await _productService.GetProductsAsync();
    }

}
<!--#endregion-->
<!-- #region HTML-->
@if(Data == null)
   { 
    <h4>Loading</h4>
}
else
{
    @if (Data.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Quantity</th>
                    <th>Product Brand</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Data)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td
                        <td>@item.Brand</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<!--#endregion-->






